    dplyr,
    purrr,
    rlang,
    MASS (>= 7.3),
    stats (>= 3.4.0),
    graphics (>= 3.4.0),
    base (>= 3.4.0),
    magrittr,
    utils,
    ggplot2,
    cowplot
RoxygenNote: 7.1.1
